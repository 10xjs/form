[version]
0.71.0

[include]
<PROJECT_ROOT>/**/node_modules

[ignore]
<PROJECT_ROOT>/\(lib\|esnext\)/.*\.js.flow$

[lints]
all=error

[strict]
nonstrict-import
unclear-type
unsafe-getters-setters
untyped-import
untyped-type-import
sketchy-null

[libs]
<PROJECT_ROOT>/flow-typed

[options]
emoji=true
include_warnings=true
suppress_comment=\\(.\\|\n\\)*\\$ExpectError\\s*[^\\S]+
module.ignore_non_literal_requires=true
